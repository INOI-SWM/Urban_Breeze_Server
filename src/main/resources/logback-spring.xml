<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="SLACK_WEBHOOK_URL" source="slack.webhook-url" />
    <springProperty scope="context" name="SLACK_CHANNEL"     source="slack.channel" />
    <!-- ÏΩòÏÜî Ï∂úÎ†• ÏÑ§Ï†ï -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ÌååÏùº Ï∂úÎ†• ÏÑ§Ï†ï -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/urbanbreeze-api.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/urbanbreeze-api.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Slack ÏïåÎ¶º ÏÑ§Ï†ï (ERROR Î†àÎ≤® Ïù¥ÏÉÅÎßå) -->
    <appender name="SLACK" class="com.github.maricn.logback.SlackAppender">
        <webhookUri>${SLACK_WEBHOOK_URL}</webhookUri>
        <channel>${SLACK_CHANNEL}</channel>
        <username>UrbanBreeze Bot</username>
        <iconEmoji>:warning:</iconEmoji>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>üö® *UrbanBreeze API Ïò§Î•ò Î∞úÏÉù*%n%n%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36}%n%msg%n%ex{short}</pattern>
        </layout>
        <!-- ERROR Î†àÎ≤® Ïù¥ÏÉÅÎßå Ï†ÑÏÜ° -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- Î°úÏª¨ ÌôòÍ≤ΩÏö© ÏÑ§Ï†ï (Slack ÏïåÎ¶º Ï†úÏô∏) -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
            <!-- Slack ÏïåÎ¶º Ï†úÏô∏ -->
        </root>
        
        <logger name="com.ridingmate" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
    </springProfile>

    <!-- Dev ÌôòÍ≤ΩÏö© ÏÑ§Ï†ï (Slack ÏïåÎ¶º Ìè¨Ìï®) -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
            <appender-ref ref="SLACK"/>
        </root>
        
        <logger name="com.ridingmate" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
    </springProfile>

    <!-- Ïö¥ÏòÅ ÌôòÍ≤ΩÏö© ÏÑ§Ï†ï -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
            <appender-ref ref="SLACK"/>
        </root>
        
        <logger name="com.ridingmate" level="INFO"/>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.hibernate.SQL" level="WARN"/>
    </springProfile>

</configuration>
